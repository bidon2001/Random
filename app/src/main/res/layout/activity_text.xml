<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1">

            <ListView
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:id="@+id/random_list"
                android:layout_weight="0.75" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/text"
                android:id="@+id/textView" />

        </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/button_add"
            android:layout_toLeftOf="@+id/button_add"
            android:layout_toStartOf="@+id/button_add" />

        <Button
            android:text="Random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/button_text"
            android:background="@drawable/button"
            android:id="@+id/button_rnd" />

        <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/button_text"
            android:background="@drawable/button"
            android:id="@+id/button_add"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/button_rnd"
            android:layout_toStartOf="@+id/button_rnd" />

    </RelativeLayout>
</LinearLayout>