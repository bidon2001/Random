<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.logic.random.NumberActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_max"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/text_to"
        android:layout_alignLeft="@+id/edit_min"
        android:layout_alignStart="@+id/edit_min" />

    <Button
        android:text="Generate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/button_text"
        android:background="@drawable/button"
        android:id="@+id/button_random" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="41dp"
        android:id="@+id/edit_min"
        android:layout_below="@+id/text_from"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="To"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:textSize="@dimen/text_size"
        android:textColor="@color/text"
        android:id="@+id/text_to"
        android:layout_below="@+id/edit_min"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="From"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_from"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size"
        android:layout_below="@+id/button_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="@dimen/text_size"
        android:id="@+id/text_result"
        android:layout_marginBottom="58dp"
        android:layout_above="@+id/button_random"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
